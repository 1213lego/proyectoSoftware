<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistroRestauranteActivity"
    tools:layout_editor_absoluteY="81dp">

    <LinearLayout
        android:id="@+id/layoutTelContacto"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutNombre">

        <TextView
            android:id="@+id/labTelefonoContacto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:text="TelÃ©fono de contacto del restaurante: "
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/linearLayoutNombre" />

        <EditText
            android:id="@+id/txtTelContacto"
            android:layout_width="318dp"
            android:layout_height="37dp"
            android:layout_marginStart="16dp"
            android:ems="10"
            android:inputType="textPersonName"
            app:layout_constraintStart_toStartOf="@+id/linearLayoutNombre"
            app:layout_constraintTop_toBottomOf="@+id/labNombre" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/frameTitulo"
        android:layout_width="368dp"
        android:layout_height="46dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/labTitulo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/border"
            android:gravity="center"

            android:text="AGREGA TU RESTAURANTE"
            android:textAlignment="center" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/frameImagen"
        android:layout_width="193dp"
        android:layout_height="130dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameTitulo">

        <ImageView
            android:id="@+id/imgRestaurante"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/descarga" />

        <Button
            android:id="@+id/btnExaminar"
            android:layout_width="35dp"
            android:layout_height="38dp"
            android:text="+" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/linearLayoutNombre"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameImagen">

        <TextView
            android:id="@+id/labNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:text="Especifica el nombre del restaurante: "
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/linearLayoutNombre" />

        <EditText
            android:id="@+id/txtNombre"
            android:layout_width="320dp"
            android:layout_height="32dp"
            android:layout_marginStart="16dp"
            android:ems="10"
            android:inputType="textPersonName"
            app:layout_constraintStart_toStartOf="@+id/linearLayoutNombre"
            app:layout_constraintTop_toBottomOf="@+id/labNombre" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutDescripcion"
        android:layout_width="wrap_content"
        android:layout_height="52dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner6">

        <TextView
            android:id="@+id/labDescripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descripcion:" />

        <EditText
            android:id="@+id/txtDescripcion"
            android:layout_width="289dp"
            android:layout_height="31dp"
            android:ems="10"
            android:inputType="textMultiLine" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="20dp"
        android:text="Tipo de comida: "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutTelContacto" />

    <Spinner
        android:id="@+id/spinner6"
        android:layout_width="200dp"
        android:layout_height="25dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/textView18"
        app:layout_constraintTop_toBottomOf="@+id/layoutTelContacto" />

    <FrameLayout
        android:layout_width="114dp"
        android:layout_height="38dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btnSiguiente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Siguiente"
            android:textSize="12sp" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="217dp"
        android:layout_height="58dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="84dp"
        tools:layout_editor_absoluteY="424dp">

        <TextView
            android:id="@+id/labUbicarRestaurante"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ubica tu restaurante"
            android:textAlignment="center" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>