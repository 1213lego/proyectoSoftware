<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UsuarioActivity">

    <LinearLayout
        android:id="@+id/layoutAll"
        android:layout_width="match_parent"
        android:layout_height="501dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layoutUsuario"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:orientation="horizontal"
            android:padding="10dp">

            <ImageView
                android:id="@+id/imgUsuario"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingStart="3dp"
                app:srcCompat="@drawable/default_user" />

            <LinearLayout
                android:id="@+id/layoutDatos"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="10dp"
                android:paddingStart="5dp">

                <TextView
                    android:id="@+id/txtEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="" />

                <TextView
                    android:id="@+id/txtNombre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="" />

                <TextView
                    android:id="@+id/txtApellidos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="" />

                <TextView
                    android:id="@+id/txtSaldo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="solo si hacemos saldo..." />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutBuscarRestaurantes"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:padding="10dp">

            <Button
                android:id="@+id/btnBuscarRestaurantes"
                android:layout_width="363dp"
                android:layout_height="34dp"
                android:layout_weight="1"
                android:text="Â¡TENGO HAMBRE!"
                android:textSize="8sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutRestauranteFavoritos"
            android:layout_width="match_parent"
            android:layout_height="328dp"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/txtRestaurantesFavoritos"
                android:layout_width="368dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:paddingStart="80dp"
                android:textSize="20sp"
                tools:text="Restaurantes Favoritos" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerViewResFavoritos"
                android:layout_width="match_parent"
                android:layout_height="500dp"
                tools:listitem="@layout/restaurante_item" />

        </LinearLayout>
    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>