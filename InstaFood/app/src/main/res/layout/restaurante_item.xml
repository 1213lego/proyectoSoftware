<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:theme="@style/AppTheme">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_marginStart="1dp"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="14dp"
            android:layout_marginBottom="11dp"
            app:layout_constraintBottom_toTopOf="@+id/direccionRestaurante"
            app:layout_constraintEnd_toStartOf="@+id/tituloRestaurante"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/restaurantereal" />

        <TextView
            android:id="@+id/telefonoRestaurante"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginEnd="133dp"
            android:layout_marginBottom="5dp"
            android:text="telefono"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/direccionRestaurante"
            app:layout_constraintTop_toBottomOf="@+id/descripcionRestaurante" />

        <TextView
            android:id="@+id/direccionRestaurante"
            android:layout_width="0dp"
            android:layout_height="23dp"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="5dp"
            android:text="direccion"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/telefonoRestaurante"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <TextView
            android:id="@+id/tituloRestaurante"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="34dp"
            android:text="titulo"
            app:layout_constraintBottom_toTopOf="@+id/descripcionRestaurante"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/descripcionRestaurante"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="4dp"
            android:text="descripcion"
            app:layout_constraintBottom_toTopOf="@+id/telefonoRestaurante"
            app:layout_constraintEnd_toEndOf="@+id/tituloRestaurante"
            app:layout_constraintStart_toStartOf="@+id/tituloRestaurante"
            app:layout_constraintTop_toBottomOf="@+id/tituloRestaurante" />
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>